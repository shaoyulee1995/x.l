{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015"
    ],
    "jsx": "preserve",
    "baseUrl": "src",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/hooks/*": [
        "components/hooks/*"
      ],
      "@/leetcode/*": [
        "components/leetcode/*"
      ],
      "@/lib/*": [
        "components/lib/*"
      ],
      "@/types/*": [
        "components/types/*"
      ],
      "@/ui/*": [
        "components/ui/*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2017",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
